[advice]

	statusHints = false

[alias]

	a = add
	al = add .
	ap = add --patch
	b = branch -v -a
	c = commit
	ca = commit
	cam = commit -m
	cm = commit -m
	co = checkout
	d = diff
	f = fetch -v
	fa = fetch --all
	ff = merge --ff-only
	ffom = merge --ff-only origin/master
	l = log --pretty=format:\"%C(yellow)%h %ad%Cred%d %Creset%s%Cblue [%cn]\" --decorate --date=relative --all
	lg = log --pretty=format:\"%C(yellow)%h %ad%Cred%d %Creset%s%Cblue [%cn]\" --decorate --date=relative --graph --all
	ls = log --pretty=format:\"%C(yellow)%h %ad%Cred%d %Creset%s%Cblue [%cn]\" --decorate --date=relative --all
	m = merge
	com = checkout master
	cod = checkout develop
	p = push
	pt = push --tags
	r = remote -v
	s = status
	t = tag -l

	changelog = "!f() { git log --no-merges $1 --not $2 --format=\"%h %s%+b\"; }; f"
	contributors = shortlog --summary --numbered # List contributors with number of commits https://github.com/mathiasbynens/dotfiles/blob/e32bc6cc07e1e25ba0821c3c20b488ead2133e0a/.gitconfig

	doc     = "!f() { git commit -m \"doc: :pencil: $1\"; }; f"
	fix     = "!f() { git commit -m \":bug: fix $1\" -v; }; f"
	hi5     = "!f() { git commit -m \"^5 $1\"; }; f"

	batman  = "!f() { git add -A . && git commit -m \"Batman! $1\"; }; f"
	kapow   = "!f() { git add -A . && git commit -m \":zap: :facepunch: :zap: $1\"; }; f"
	wa     	= "!f() { git add -A . && git commit -m \"Pedal to the :metal: $1\"; }; f"
	wip     = "!f() { git add -A . && git commit -m \"wip: :construction: $1\"; }; f"
	zap     = "!f() { git add -A . && git commit -m \":zap: :zap: :sparkles: $1\"; }; f"

[bash]

	showDirtyState = true

[color]

	ui = auto

[color "branch"]

	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]

	frag = cyan reverse
	meta = normal reverse
	new = green
	old = red
	whitespace = red reverse

[color "interactive"]

	prompt = blue reverse

[core]

	autocrlf = input
	editor = vi
	excludesfile = ~/.gitexcludes

[fetch]

	prune = true

[help]

	autocorrect = 1

[merge]

	branchdesc = true
	log = 65
	stat = true

[mergetool]

	keepBackup = false

[push]

	default = simple

[url "https://github"]

	# Because "git://" urls are causing major performance issues (ubuntu)
	insteadOf = git://github

[user]

	name = Gerard Roche
	email = gerardroche@users.noreply.github.com
