
[alias]

	a = add
	al = add .
	ap = add --patch
	b = branch -av
	c = commit
	changelog = "!f() { git log --no-merges $1 --not $2 --format=\"%h %s%+b\"; }; f"
	cl = "!f() { test -n \"$1\" && git commit -m \":lipstick: $1\" || git commit -m \":lipstick:\"; }; f"
	co = checkout
	contributors = shortlog --summary --numbered # List contributors with number of commits https://github.com/mathiasbynens/dotfiles/blob/e32bc6cc07e1e25ba0821c3c20b488ead2133e0a/.gitconfig
	d = diff
	f = fetch
	fa = fetch --all
	ff = merge --ff-only
	l = log --pretty=format:\"%C(yellow)%h %ad%Cred%d %Creset%s%Cblue [%cn]\" --decorate --date=relative --all
	lg = log --pretty=format:\"%C(yellow)%h %ad%Cred%d %Creset%s%Cblue [%cn]\" --decorate --date=relative --graph --all
	p = push
	pr = pull --rebase
	pt = "!f() { git push && git push --tags; }; f"
	r = remote -v
	s = status
	t = tag -l
	w = "!f() { git add -A && test -n \"$1\" && git commit -m \"$1\" || git commit -m \"SAVEPOINT\"; }; f"
	zap = "!f() { git add -A && test -n \"$1\" && git commit -m \"$1\" || git commit -m \":zap:\"; }; f"

[bash]

	showDirtyState = true

[color]

	ui = auto

[color "branch"]

	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	frag = cyan reverse
	meta = normal reverse
	new = green
	old = red
	whitespace = red reverse

[color "interactive"]
	prompt = blue reverse

[core]

	autocrlf = input
	editor = vi
	excludesfile = ~/.gitexcludes

[help]

	autocorrect = 1

[merge]

	# branchdesc = true
	# Include summaries of merged commits in newly created merge commit messages
	# https://github.com/mathiasbynens/dotfiles/blob/e32bc6cc07e1e25ba0821c3c20b488ead2133e0a/.gitconfig
	# log = 65

[mergetool]

	keepBackup = false

[push]

	default = simple

[url "https://github"]

	# git:// urls causing major performance issues
	insteadOf = git://github

[user]

	name = Gerard Roche
	email = gerardroche@users.noreply.github.com

[fetch]
	prune = true
[merge]
	stat = true
[advice]
	statusHints = false
